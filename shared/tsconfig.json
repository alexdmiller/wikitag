{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ],
    "declaration": true
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": ["src/lib"]
}
