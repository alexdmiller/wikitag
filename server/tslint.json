{
  "extends": ["tslint:recommended", "tslint-microsoft-contrib/recommended"],
  "defaultSeverity": "error",
  "rulesDirectory": ["node_modules/tslint-microsoft-contrib"],
  "rules": {
    "array-type": [true, "array"],
    "arrow-parens": [true, "ban-single-arg-parens"],
    "export-name": false,
    "function-name": false,
    "import-name": false,
    "interface-name": false,
    "interface-over-type-literal": false,
    "max-classes-per-file": [false, 20],
    "max-func-body-length": false,
    // We use Jest instead of Mocha, so this rule doesn't apply
    "mocha-no-side-effect-code": false,
    "no-angle-bracket-type-assertion": true,
    "no-backbone-get-set-outside-model": false,
    "no-bitwise": false,
    "no-console": false,
    "no-empty-interface": false,
    "no-empty": [true, "allow-empty-catch"],
    "no-relative-imports": false,
    "no-string-based-set-timeout": false,
    "no-suspicious-comment": false,
    "object-literal-sort-keys": false,
    "prefer-type-cast": false,
    "react-a11y-accessible-headings": false,
    "react-a11y-event-has-role": false,
    "react-a11y-input-elements": false,
    "react-a11y-role-has-required-aria-props": false,
    "trailing-comma": [true, { "multiline": { "functions": "never" } }],
    "use-simple-attributes": false
  },
  "linterOptions": {
    "exclude": ["**/node_modules/**", "**/bin/**", "**/lib/**", "**/build/**"]
  }
}
